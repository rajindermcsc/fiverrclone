<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dreamguys.in.co.gigs.payment.StripePay">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorAppTheme">

            <dreamguys.in.co.gigs.utils.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:gravity="right"
                android:textAlignment="gravity"
                android:text="@string/title_stripe_payment"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16sdp"
                app:fontName="@string/font_bold" />


        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardMaxElevation="@dimen/_2sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_stripe_card"
                    android:contentDescription="@string/stripe" />

                <com.braintreepayments.cardform.view.CardForm
                    android:id="@+id/card_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp" />

                <Button
                    android:id="@+id/btnBuy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorAppTheme"
                    android:text="@string/bottom_menu_buy"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="vertical"
                android:visibility="gone">

                <dreamguys.in.co.gigs.utils.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Payment Details"
                    android:textSize="@dimen/_14sdp"
                    app:fontName="@string/font_bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <dreamguys.in.co.gigs.utils.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/_5sdp"
                        android:text="Card Number"
                        android:textColor="@android:color/black"
                        app:fontName="@string/font_regular" />


                    <dreamguys.in.co.gigs.utils.CustomEditext
                        android:id="@+id/cardNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_weight="0.5"
                        android:background="@drawable/banner_background"
                        android:digits="0123456789"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableRight="@drawable/ic_lock_outline_grey_400_24dp"
                        android:inputType="number"
                        android:maxLength="16"
                        android:padding="@dimen/_10sdp"
                        android:text=""
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/_12sdp"
                        app:fontName="@string/font_regular"
                        android:drawableEnd="@drawable/ic_lock_outline_grey_400_24dp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <dreamguys.in.co.gigs.utils.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:padding="@dimen/_5sdp"
                            android:text="Card expiry"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_11sdp"
                            app:fontName="@string/font_regular" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:background="@drawable/banner_background"
                            android:orientation="horizontal">


                            <dreamguys.in.co.gigs.utils.CustomEditext
                                android:id="@+id/month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_3sdp"
                                android:hint="MM"
                                android:inputType="number"
                                android:maxLength="2"
                                android:padding="@dimen/_10sdp"
                                android:text=""
                                android:textColor="@color/colorGrey"
                                android:textSize="@dimen/_12sdp"
                                app:fontName="@string/font_regular" />

                            <dreamguys.in.co.gigs.utils.CustomTextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_3sdp"
                                android:text="/"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/colorGrey"
                                android:textSize="@dimen/_12sdp"
                                app:fontName="@string/font_regular" />

                            <dreamguys.in.co.gigs.utils.CustomEditext
                                android:id="@+id/year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_3sdp"
                                android:hint="YY"
                                android:inputType="number"
                                android:maxLength="2"
                                android:padding="@dimen/_10sdp"
                                android:text=""
                                android:textColor="@color/colorGrey"
                                android:textSize="@dimen/_12sdp"
                                app:fontName="@string/font_regular" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <dreamguys.in.co.gigs.utils.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:padding="@dimen/_5sdp"
                            android:text="CVV"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_11sdp"
                            app:fontName="@string/font_regular"
                            android:layout_marginLeft="@dimen/_5sdp" />


                        <dreamguys.in.co.gigs.utils.CustomEditext
                            android:id="@+id/cvc"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_3sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:layout_weight="0.5"
                            android:background="@drawable/banner_background"
                            android:digits="0123456789"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="3"
                            android:padding="@dimen/_10sdp"
                            android:text=""
                            android:textColor="@color/colorGrey"
                            android:textSize="@dimen/_12sdp"
                            app:fontName="@string/font_regular" />

                    </LinearLayout>
                </LinearLayout>


                <dreamguys.in.co.gigs.utils.CustomButton
                    android:id="@+id/submitButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/button_rectangular_blue_shape"
                    android:ems="8"
                    android:text="Pay"
                    android:textColor="@android:color/white"
                    app:fontName="@string/font_regular" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
