<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dreamguys.in.co.gigs.fragment.MySalesFragment">

    <dreamguys.in.co.gigs.utils.CustomTextView
        android:id="@+id/tv_current_bal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:text="@string/available_funds"
        android:textColor="@color/colorAppTheme"
        android:textSize="@dimen/_14sdp"
        android:visibility="gone"
        app:fontName="@string/font_bold" />

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_purchase_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />


    <dreamguys.in.co.gigs.utils.CustomTextView
        android:id="@+id/no_data_found"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:visibility="gone"
        android:text="@string/no_data_found"
        android:textColor="@color/colorAppTheme"
        android:textSize="@dimen/_14sdp"
        app:fontName="@string/font_bold" />

</LinearLayout>
