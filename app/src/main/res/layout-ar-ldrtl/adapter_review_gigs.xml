<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_profile"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:src="@drawable/ic_no_image_100"
            app:civ_border_color="@android:color/transparent"
            app:civ_border_width="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <dreamguys.in.co.gigs.utils.CustomTextView
                android:id="@+id/tv_gigs_username"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="@dimen/_5sdp"
                android:text="Stanislav Percovic (2 weeks ago)"
                android:textAlignment="gravity"
                android:textSize="@dimen/_10sdp"
                app:fontName="@string/font_regular" />

            <RatingBar
                android:id="@+id/rating_gigs"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_14sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:numStars="5"
                android:rating="1" />

            <dreamguys.in.co.gigs.utils.CustomTextView
                android:id="@+id/tv_gigs_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:gravity="right"
                android:padding="@dimen/_5sdp"
                android:singleLine="true"
                android:text="Good job"
                android:textAlignment="gravity"
                android:textSize="@dimen/_10sdp"
                app:fontName="@string/font_regular" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>