<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <dreamguys.in.co.gigs.utils.CustomEditext
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/ic_search_36"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableStart="@drawable/ic_search_36"
            android:hint="@string/txt_search_looking_for"
            android:imeOptions="actionSearch"
            android:padding="@dimen/_8sdp"
            android:textAlignment="gravity"
            android:textSize="@dimen/_10sdp" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/sl_tv_top_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/_2sdp"
        android:gravity="start"
        android:text="@string/text_top_categories"
        android:textAlignment="viewStart" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical">

            <View
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_10"
                android:background="@drawable/btn_bg_round_corner_grey" />

            <View
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/background" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical">

            <View
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@+id/tv_cat"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_10"

                android:background="@drawable/btn_bg_round_corner_grey" />

            <View
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/background" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@+id/tv_cat"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_10"
                android:background="@drawable/btn_bg_round_corner_grey" />

            <View
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@color/background" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="@dimen/activityPadding"
            android:layout_marginRight="@dimen/activityPadding"
            android:layout_marginTop="@dimen/padding_10"
            android:background="@color/background" />

        <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="@dimen/activityPadding"
            android:layout_marginRight="@dimen/activityPadding"
            android:layout_marginTop="@dimen/padding_10"
            android:background="@color/background" />

        <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="@dimen/activityPadding"
            android:layout_marginRight="@dimen/activityPadding"
            android:layout_marginTop="@dimen/padding_10"
            android:background="@color/background" />
    </LinearLayout>

    <TextView
        android:id="@+id/sl_tv_popular_gigs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/_2sdp"
        android:gravity="start"
        android:text="@string/text_popular_gigs"
        android:textAlignment="viewStart" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="@dimen/placeholderImage"
                android:layout_height="@dimen/placeholderImage"
                android:layout_marginEnd="@dimen/activityPadding"
                android:layout_marginRight="@dimen/activityPadding"
                android:layout_marginTop="@dimen/padding_10"
                android:background="@color/background" />

            <View
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/background" />

            <View
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/background" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="@dimen/placeholderImage"
                android:layout_height="@dimen/placeholderImage"
                android:layout_marginEnd="@dimen/activityPadding"
                android:layout_marginRight="@dimen/activityPadding"
                android:layout_marginTop="@dimen/padding_10"
                android:background="@color/background" />

            <View
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/background" />

            <View
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/background" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="@dimen/placeholderImage"
                android:layout_height="@dimen/placeholderImage"
                android:layout_marginEnd="@dimen/activityPadding"
                android:layout_marginRight="@dimen/activityPadding"
                android:layout_marginTop="@dimen/padding_10"
                android:background="@color/background" />

            <View
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/background" />

            <View
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/background" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/sl_tv_latest_gigs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/_2sdp"
        android:gravity="start"
        android:text="@string/text_latest_gigs"
        android:textAlignment="viewStart" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="@dimen/placeholderImage"
                android:layout_height="@dimen/placeholderImage"
                android:layout_marginEnd="@dimen/activityPadding"
                android:layout_marginRight="@dimen/activityPadding"
                android:layout_marginTop="@dimen/padding_10"
                android:background="@color/background" />

            <View
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/background" />

            <View
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/background" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="@dimen/placeholderImage"
                android:layout_height="@dimen/placeholderImage"
                android:layout_marginEnd="@dimen/activityPadding"
                android:layout_marginRight="@dimen/activityPadding"
                android:layout_marginTop="@dimen/padding_10"
                android:background="@color/background" />

            <View
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/background" />

            <View
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/background" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="@dimen/placeholderImage"
                android:layout_height="@dimen/placeholderImage"
                android:layout_marginEnd="@dimen/activityPadding"
                android:layout_marginRight="@dimen/activityPadding"
                android:layout_marginTop="@dimen/padding_10"
                android:background="@color/background" />

            <View
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/background" />

            <View
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/background" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>