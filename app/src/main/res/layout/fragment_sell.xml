        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="@dimen/_5sdp"
        android:text="@string/text_create_gigs"
        android:textColor="@android:color/white"
        app:fontName="@string/font_bold" />
</LinearLayout>
