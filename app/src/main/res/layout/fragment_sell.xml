                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/remote" />

                    <RadioButton
                        android:id="@+id/rb_onsite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/onsite" />
