<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <ImageButton
            android:id="@+id/image_transcation_type"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:background="@drawable/drawable_gray_transaction_history"
            android:scaleType="centerInside"
            android:src="@drawable/ic_card_payment_48dp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/text_transaction_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toEndOf="@+id/image_transcation_type"
            android:layout_toRightOf="@+id/image_transcation_type"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:maxLength="25"
            android:text="Gigs Service Name"
            android:textStyle="bold"
            android:textColor="@color/wallet_btn"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/text_transaction_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_transaction_name"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toEndOf="@+id/image_transcation_type"
            android:layout_toRightOf="@+id/image_transcation_type"
            android:gravity="center_vertical"
            android:text="Purchased"
            android:textAllCaps="true"
            android:textColor="@color/wallet_btn"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/text_transaction_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toEndOf="@+id/text_transaction_method"
            android:layout_toRightOf="@+id/text_transaction_method"
            android:layout_below="@+id/text_transaction_name"
            android:text="- 10/07/2019"
            android:textAllCaps="true"
            android:textColor="@color/wallet_btn"
            android:textSize="@dimen/_8sdp" />


        <TextView
            android:id="@+id/text_transaction_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/text_transaction_name"
            android:layout_centerInParent="true"
            android:text="189.00"
            android:gravity="right"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/wallet_btn"
            android:textSize="@dimen/_12sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignEnd="@+id/text_transaction_name" />


    </RelativeLayout>

</android.support.v7.widget.CardView>